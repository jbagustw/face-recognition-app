# Face Recognition App Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
REACT_APP_API_URL=/api
REACT_APP_FACE_API_MODELS_URL=https://justadudewhohacks.github.io/face-api.js/models

# Database Configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/face_recognition_db
NODE_ENV=production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Security
REACT_APP_ENABLE_HTTPS_ENFORCEMENT=true
REACT_APP_ENABLE_CORS=true

# Performance
REACT_APP_FACE_DETECTION_INTERVAL=100
REACT_APP_CONFIDENCE_THRESHOLD=0.6

# Storage
REACT_APP_STORAGE_TYPE=database
REACT_APP_DATA_RETENTION_DAYS=30

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Server Configuration
PORT=3001